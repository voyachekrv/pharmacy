# Запрос на поиск страницы
input PageRequest {
    # Номер страницы
    page: Int!
    # Размер страницы
    size: Int!
}

# Данные о странице
type PageInfo {
    # Номер страницы
    page: Int!
    # Является ли данная страница последней
    last: Boolean!
    # Размер страницы
    size: Int
    # Общее количество записей
    totalElements: Int
    # Общее количество страниц
    totalPages: Int
}